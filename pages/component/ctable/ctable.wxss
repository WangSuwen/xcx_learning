/* pages/component/ctable/ctable.wxss */
.t-tr{
  display:flex;
}
.t-td{
  font-size: 26rpx;
  line-height: 32rpx;
  color: #333;
  font-family: PingFangSC-Regular;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #F4F5F8;
  width: 198rpx;
  height: 88rpx;
  border-radius: 4px;
  margin: 5rpx;
  text-align: center;
  display: inline-block;
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}
.t-td-lineheight {
  line-height: 88rpx;
}
.multi-line-td {
  text-overflow:-webkit-ellipsis-lastline;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  padding: 15rpx 20rpx;
}
.t-td-checked-img {
  width: 36rpx;
  height: 36rpx;
  position:absolute;
  right:0;
  bottom:0;
}
.t-td-checked{
  background-color: rgb(255,239,239);
  color: rgb(249,54,50);
  position: relative;
}
.t-td-checked::before {
  content: '';
  border-top: 50rpx solid rgb(255,239,239);
  border-right: 50rpx solid transparent;
  position: absolute;
  z-index: 9999;
  bottom: 0;
  right: 0;
}
.t-td-checked::after {
  content: '';
  width: 50rpx;
  height: 50rpx;
  background-color: rgb(248,70,67);
  border-bottom-right-radius: 5px;
  position: absolute;
  bottom: 0;
  right: 0;
}