.t-td-checked{
  background-color: rgb(255,239,239);
  color: rgb(249,54,50);
  position: relative;
}
.t-td-checked::before {
  content: '';
  border-top: 50rpx solid rgb(255,239,239);
  border-right: 50rpx solid transparent;
  position: absolute;
  z-index: 9999;
  bottom: 0;
  right: 0;
}
.t-td-checked::after {
  content: '';
  width: 50rpx;
  height: 50rpx;
  background-color: rgb(248,70,67);
  border-bottom-right-radius: 5px;
  position: absolute;
  bottom: 0;
  right: 0;
}