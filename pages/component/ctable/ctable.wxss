/* pages/component/ctable/ctable.wxss */
.t-tr{
  display:flex;
}
.t-td{
  font-size: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: rgb(242,243,247);
  width: 200rpx;
  height: 100rpx;
  border-radius: 5px;
  margin: 5rpx;
  text-align: center;
  display: inline-block;
  padding: 0 10px;
  box-sizing: border-box;
}
.t-td-lineheight {
  line-height: 100rpx;
}
.multi-line-td {
  text-overflow:-webkit-ellipsis-lastline;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  padding: 15rpx;
}
